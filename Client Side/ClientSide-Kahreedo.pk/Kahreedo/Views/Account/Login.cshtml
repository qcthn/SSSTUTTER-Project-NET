
@{
    ViewBag.Title = "Login";
}

<!-- Cart view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Đăng nhập</h4>
                               
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <label for="">Tên đăng nhập hoặc địa chỉ email<span>*</span></label>
                                    <input name="UserName" type="text" required placeholder="Username">
                                    <label for="">Mật khẩu<span>*</span></label>
                                    <input name="Password" type="password" required placeholder="Password">
                                    <button type="submit" class="aa-browse-btn">Đăng nhập</button>
                                    <label class="rememberme" for="rememberme"><input type="checkbox" id="rememberme"> Ghi nhớ tôi </label>
                                    <p class="aa-lost-password"><a href="#">Mất mật khẩu?</a></p>
                            }
                                
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Đăng ký</h4>

                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <label for="">Tên<span>*</span></label>
                                    <input name="First_Name" type="text" placeholder="Enter first name">

                                    <label for="">Họ<span>*</span></label>
                                    <input name="Last_Name" type="text" placeholder="Enter last name">

                                    <label for="">Tên đăng nhập<span>*</span></label>
                                    <input name="UserName" type="text" placeholder="Username">

                                    <label for="">Mật khẩu<span>*</span></label>
                                    <input name="Password" type="password" placeholder="Password">

                                    <label for="">Email<span>*</span></label>
                                    <input name="Email" type="text" placeholder="Enter your email">

                                    <label for="">Số điện thoại<span>*</span></label>
                                    <input name="Mobile1" type="text" placeholder="Mobile">

                                    <label for="">Địa chỉ<span></span></label>
                                    <input name="Address1" type="text" placeholder="Address">

                                    <button type="submit" class="aa-browse-btn">Đăng ký</button>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
